<%- include('./partials/top')%>

<body class="theme-red">


    <%- include('./partials/topBar')%>
    <%- include('./partials/navBar')%>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">

                            <h1>Enter Details</h1>
                        </div>
                        <form action="/postDataSave" method="POST">
                        <table class="table">
                            <tr>
                                <td>
                                    <h5>Select Company</h5>
                                </td>
                                <td>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="company" id="company">
                                            <option value="0">-- Please select company--</option>
                                            <option value="Audi">Audi</option>
                                            <option value="BMW">BMW</option>
                                            <option value="Honda">Honda</option>
                                            <option value="Maruti">Maruti</option>
                                            <option value="Hyundai">Hyundai</option>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5>Select Model</h5>
                                </td>
                                <td>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="model" id="model">
                                            <option value="">-- Please select model--</option>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5>Select Engine Type(Petrol/Diesel)</h5>
                                </td>
                                <td>
                                    <div class="col-sm-6">
                                        <select class="form-control"  name="engineType">
                                            <option value="">-- Please select type--</option>
                                            <option value="Petrol">Petrol</option>
                                            <option value="Diesel">Diesel</option>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5>Select Job</h5>
                                </td>
                                <td>
                                    <div class="demo-checkbox">
                                        <input type="checkbox" id="basic_checkbox_2" class="filled-in" name="service" />
                                        <label for="basic_checkbox_2">Service</label>
                                        <input type="checkbox" id="basic_checkbox_21" class="filled-in" name="repair"/>
                                        <label for="basic_checkbox_21">Repair</label>
                                        <input type="checkbox" id="basic_checkbox_22" class="filled-in" name="washing"/>
                                        <label for="basic_checkbox_22">Washing</label>
                                        <input type="checkbox" id="basic_checkbox_23" class="filled-in" name="paint"/>
                                        <label for="basic_checkbox_23">Denting Painting</label>
                                    </div>
                                </td>
                            </tr>

                        </table>
                        <div style="text-align: center;">
                            <input type="submit" class="btn bg-orange waves-effect">
                            </input>
                        </div>
                        <br>
                    </form>


