                                <option value="30">30</option>
                                <option value="40">40</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                    </div> -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> -->
<script>
$(document).ready(function () {
    $("#company").change(function () {
        var val = $(this).val();
        if (val == "Audi") {
            $("#model").html("<option value='A4'>A4</option><option value='A6'>A6</option>");
        } else if (val == "BMW") {
            $("#model").html("<option value='3 Series'>3 Series</option><option value='5 Series'>5 Series</option>");
        } else if (val == "Honda") {
            $("#model").html("<option value='City'>City</option><option value='BRV'>BRV</option>");
        } else if (val == "Maruti") {
            $("#model").html("<option value='Swift'>Swift</option><option value='Ciaz'>Ciaz</option>");
        } else if (val == "Hyundai") {
            $("#model").html("<option value='i20'>i20</option><option value='Verna'>Verna</option>");
        } else if (val == "0") {
            $("#model").html("<option value=''>--Please select model--</option>");
        }
    });
});
</script>

